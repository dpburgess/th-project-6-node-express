extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Back
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1 #{body.project_name}

        p.lead.text-light
          | #{body.description}

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies

        ul
          each technology in body.technologies
            li #{technology}

        a.button.expanded(target="_blank" href=`${body.live_link}`) Live Demo
        a.button.expanded(target="_blank" href=`${body.github_link}`) GitHub Repo
    
    img.image(src=`../../${body.image_urls[1]}`)
    img.image(src=`../../${body.image_urls[2]}`)